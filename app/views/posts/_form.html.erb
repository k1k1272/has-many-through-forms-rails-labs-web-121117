<%= form_for post do |f| %>
  <%= f.label "Title" %>
  <%= f.text_field :title %>
  <%= f.label "Content" %>
  <%= f.text_area :content %>
  <%= f.collection_check_boxes :category_ids, @categories, :id, :name %>
  <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
    <%= categories_fields.text_field :name %>
  <% end %>

  <%= f.collection_select :user_ids, @users, :id, :name %>
  <%= f.fields_for :users, post.users.build do |users| %>
    <%= users.text_field :username %>
  <% end %>

  <%= f.submit %>
<% end %>
